#include <bits/stdc++.h>
using namespace std;

class Node
{
public:
    int data;
    Node *next;

    Node(int data)
    {
        this->data = data;
        next = NULL;
    }
};

class stackk
{
public:
    Node *top;
    stackk()
    {
        top = NULL;
    }
    void push(int data)
    {
        Node *newNode = new Node(data);
        if (!newNode)
        {
            cout<<"Stack Overflow."<<endl;
            return;
        }
        newNode->next = top;
        top = newNode;
    }
    void topp()
    {
        if (top == NULL)
        {
            cout<<"Stack is empty."<<endl;
        }
        else
        {
            cout << endl
                 << "The element is : " << this->top->data<<endl;
        }
    }

    void pop()
    {
        if (top == NULL)
        {
            cout<<"Stack Underflow."<<endl;
        }
        else
        {
            Node *temp = top;
            top = top->next;
            delete temp;
        }
    }

    void search(int data)
    {
        Node *temp = top;

        while (temp != NULL)
        {
            if (temp->data == data)
            {
                cout<<"Present"<<endl;
                return;
            }
            temp = temp->next;
        }

        cout<<"Not Present"<<endl;
    }


    void update()
    {

        int key;
        cout<<"Enter the key: "<<endl;
        cin >> key;
        int data;
        cout<<"Enter the data: "<<endl;
        cin >> data;

        Node *temp = top;

        while (temp->data != key && temp != NULL)
        {
            temp = temp->next;
        }

        if (!temp)
        {
            cout<<"No such key present"<<endl;
        }
        else
        {
            temp->data = data;
            cout<<"Updation Successful."<<endl;
        }
    }
    void display ()
    {
        Node *temp = top;

        if (!temp)
        {
            cout<<"Stack is empty"<<endl;
        }
        cout << endl;
        while (temp != NULL)
        {
            cout << temp->data;
            temp = temp->next;
            if (temp)
            {
                cout << "->";
            }
        }
    }
};

int main()
{

    stackk s ;
    int ch=0 ;
    while (ch!=6)
    {
        cout<<"1. push"<<endl;
        cout<<"2. pop"<<endl;
        cout<<"3. peek"<<endl;
        cout<<"4. search"<<endl;
        cout<<"5. update"<<endl;
        cout<<"6. Exit"<<endl;;
        cout << endl;
        cout<<"Enter Your Choice"<<endl;
        cin >> ch;
        switch (ch)
        {
            case 1:{
                cout<<"Enter Element to Insert"<<endl;
                int val = 0 ;
                cin>>val ;
                s.push(val);
                break;
            } 
            case 2:
                s.pop();
                break;
            case 3:
                s.topp();
                break;
            case 4:
            {
                cout<<"Enter Element to Search"<<endl;
                int val = 0;
                cin>>val;
                s.search(val);
                break;
            }
            case 5 :
            {
                s.update();
                break ;
            }
            default:
                return 0;
        }
    }
}
